//Calculating total price

CREATE OR REPLACE FUNCTION PRODUCTFUNC
RETURN NUMBER
AS
totalprice NUMBER:=0;
BEGIN
SELECT (QUANTITY*PRICE) into TOTALPRICE FROM PRODUCTS1 WHERE ID=10;
return totalprice;
END;

DECLARE
P NUMBER(20);
BEGIN
P:=PRODUCTFUNC();
DBMS_OUTPUT.PUT_LINE('TOTAL PRICE ' || P);
END;


//Calculating Discount

CREATE OR REPLACE FUNCTION PRODUCTFUNCTIONS
RETURN NUMBER
AS
totalprice NUMBER:=0;
BEGIN
SELECT (QUANTITY*PRICE*0.8) into TOTALPRICE FROM PRODUCTS1 WHERE ID=10;
return totalprice;
END;

DECLARE
AMOUNT NUMBER(20);
BEGIN;
AMOUNT:=SELLING_PRICE();
DBMS_OUTPUT.PUT_LINE('SELLING PRICE WITH DISCOUNT 8% IS ' || AMOUNT);
END;
